{
  "name": "root",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "npm run dev --prefix packages/playground-vue",
    "build": "node scripts/build.js",
    "build-prod": "npm run build -- --prod",
    "build-release": "npm run build-prod -- --release",
    "clean": "node scripts/clean.js",
    "tsc": "tsc",
    "tsc-watch": "tsc -w",
    "start:playground": "npm run start-test-server",
    "start-test-server": "npm run preview --prefix packages/playground-vue -- --port 4000",
    "test-unit": "jest --selectProjects unit --testPathPattern",
    "test-e2e-chromium": "cross-env E2E_BROWSER=chromium playwright test --project=\"chromium\"",
    "lint": "eslint ./",
    "prettier": "prettier --list-different .",
    "prepare-release": "npm run build-release && node ./scripts/npm/prepare-release.js",
    "ci-check": "npm-run-all --parallel tsc prettier lint",
    "prettier:fix": "prettier --write .",
    "release": "npm run prepare-release && node ./scripts/npm/release.js"
  },
  "devDependencies": {
    "@ampproject/rollup-plugin-closure-compiler": "^0.27.0",
    "@babel/preset-flow": "^7.14.5",
    "@babel/preset-react": "^7.14.5",
    "@babel/preset-typescript": "^7.16.7",
    "@playwright/test": "^1.22.1",
    "@rollup/plugin-alias": "^3.1.4",
    "@rollup/plugin-babel": "^5.3.0",
    "@rollup/plugin-commonjs": "^19.0.1",
    "@rollup/plugin-node-resolve": "^13.0.2",
    "@rollup/plugin-replace": "^3.0.0",
    "@rollup/plugin-image": "^2.1.1",
    "@types/jest": "^27.5.0",
    "@types/react": "^18.0.8",
    "@types/react-dom": "^18.0.3",
    "@typescript-eslint/eslint-plugin": "^5.22.0",
    "@typescript-eslint/parser": "^5.22.0",
    "babel-eslint": "^10.1.0",
    "babel-preset-vue": "2.0.2",
    "child-process-promise": "^2.2.1",
    "confusing-browser-globals": "^1.0.10",
    "cross-env": "^7.0.3",
    "eslint": "^7.31.0",
    "eslint-config-fbjs": "^3.1.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-babel": "^5.3.1",
    "eslint-plugin-flowtype": "^8.0.3",
    "eslint-plugin-header": "^3.1.1",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jest": "^24.4.0",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-no-function-declare-after-return": "^1.1.0",
    "eslint-plugin-no-only-tests": "^2.6.0",
    "eslint-plugin-react": "^7.24.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "eslint-plugin-sort-keys-fix": "^1.1.2",
    "fs-extra": "^10.0.0",
    "jest": "^28.1.0",
    "jest-environment-jsdom": "^28.1.0",
    "minimist": "^1.2.5",
    "playwright": "^1.25.1",
    "prettier": "^2.3.2",
    "prettier-plugin-organize-attributes": "^0.0.5",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-test-renderer": "^17.0.2",
    "rollup": "^2.75.5",
    "rollup-plugin-vue": "^6.0.0",
    "ts-jest": "^28.0.2",
    "typescript": "^4.6.4"
  }
}
