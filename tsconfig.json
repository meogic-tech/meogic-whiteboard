{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ESNext", "DOM", "DOM.ITERABLE"],
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "downlevelIteration": true,
    "strict": true,
    "baseUrl": ".",
    "typeRoots": ["node_modules/@types", "libdefs/globals"],
    "skipLibCheck": true,
    "paths": {
      "@meogic/whiteboard": ["./packages/whiteboard/src/"],
      "@meogic/whiteboard-vue": ["./packages/whiteboard-vue/src"],
      "@meogic/whiteboard-history": ["./packages/whiteboard-history/src"],
      "@meogic/whiteboard-utils": ["./packages/whiteboard-utils/src/"],
      "shared/invariant": ["./packages/shared/src/invariant.ts"],
      "shared/getDOMSelection": ["./packages/shared/src/getDOMSelection.ts"],
      "shared/environment": ["./packages/shared/src/environment.ts"]
    }
  },
  "include": ["./libdefs", "./packages"],
  "exclude": [
    "**/__tests__/**",
    "**/dist/**",
    "**/npm/**",
    "**/node_modules/**",
    "./packages/playwright-core/**"
  ]
}
